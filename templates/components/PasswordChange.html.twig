<div {{ attributes }} class="max-w-md mx-auto">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-4">Cambiar Contraseña</h2>
            
            <div class="alert alert-info mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <h3 class="font-bold">Usuario: {{ user.username }}</h3>
                    <div class="text-xs">{{ user.email }}</div>
                </div>
            </div>

            <!-- Success Message -->
            {% if successMessage %}
                <div class="alert alert-success mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>{{ successMessage }}</span>
                </div>
            {% endif %}

            <!-- Error Messages -->
            {% if errors %}
                <div class="alert alert-error mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div>
                        {% for error in errors %}
                            <div>{{ error }}</div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            
            <div class="space-y-4">
                <!-- Nueva Contraseña -->
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Nueva Contraseña</span>
                    </label>
                    <input 
                        type="password" 
                        data-model="live.norender|newPassword"
                        data-action="live#action:prevent->validatePasswords"
                        value="{{ newPassword }}"
                        class="input input-bordered w-full" 
                        placeholder="Mínimo 8 caracteres"
                        autocomplete="new-password"
                    />
                </div>

                <!-- Indicador de Fortaleza -->
                {% if newPassword %}
                    {% set strength = this.passwordStrength %}
                    <div class="space-y-2">
                        <div class="flex justify-between items-center">
                            <span class="text-sm">Fortaleza:</span>
                            <span class="text-sm font-medium">{{ strength.label }}</span>
                        </div>
                        <progress class="progress {{ strength.class }} w-full" value="{{ strength.strength }}" max="100"></progress>
                        
                        <!-- Checklist de requisitos -->
                        {% set checks = this.passwordChecks %}
                        <div class="grid grid-cols-2 gap-1 text-xs">
                            <div class="flex items-center space-x-1">
                                {% if checks.length %}
                                    <svg class="w-4 h-4 text-success" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-4 h-4 text-error" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                    </svg>
                                {% endif %}
                                <span class="{% if checks.length %}text-success{% else %}text-error{% endif %}">8+ caracteres</span>
                            </div>
                            
                            <div class="flex items-center space-x-1">
                                {% if checks.uppercase %}
                                    <svg class="w-4 h-4 text-success" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-4 h-4 text-error" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                    </svg>
                                {% endif %}
                                <span class="{% if checks.uppercase %}text-success{% else %}text-error{% endif %}">Mayúsculas</span>
                            </div>
                            
                            <div class="flex items-center space-x-1">
                                {% if checks.lowercase %}
                                    <svg class="w-4 h-4 text-success" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-4 h-4 text-error" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                    </svg>
                                {% endif %}
                                <span class="{% if checks.lowercase %}text-success{% else %}text-error{% endif %}">Minúsculas</span>
                            </div>
                            
                            <div class="flex items-center space-x-1">
                                {% if checks.numbers %}
                                    <svg class="w-4 h-4 text-success" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-4 h-4 text-error" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                    </svg>
                                {% endif %}
                                <span class="{% if checks.numbers %}text-success{% else %}text-error{% endif %}">Números</span>
                            </div>
                        </div>
                    </div>
                {% endif %}
                
                <!-- Confirmar Contraseña -->
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Confirmar Contraseña</span>
                    </label>
                    <input 
                        type="password" 
                        data-model="live.norender|confirmPassword"
                        data-action="live#action:prevent->validatePasswords"
                        value="{{ confirmPassword }}"
                        class="input input-bordered w-full" 
                        placeholder="Repetir contraseña"
                        autocomplete="new-password"
                    />
                    
                    <!-- Indicador de coincidencia -->
                    {% if confirmPassword and newPassword %}
                        {% if confirmPassword == newPassword %}
                            <div class="flex items-center mt-1 text-success text-sm">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                Las contraseñas coinciden
                            </div>
                        {% else %}
                            <div class="flex items-center mt-1 text-error text-sm">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                </svg>
                                Las contraseñas no coinciden
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
                
                <div class="card-actions justify-between mt-6">
                    <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-ghost">Cancelar</a>
                    <button 
                        type="button"
                        data-action="live#action"
                        data-action-name="save"
                        class="btn btn-primary"
                        {% if not isValid %}disabled{% endif %}
                    >
                        <span data-loading-class="loading loading-spinner loading-sm">
                            Cambiar Contraseña
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>