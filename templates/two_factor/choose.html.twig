{% extends 'layouts/auth.html.twig' %}

{% block title %}Verificación en dos pasos - SGV{% endblock %}
{% block page_title %}Verificación en dos pasos{% endblock %}
{% block auth_subtitle %}Elige cómo recibir tu código de verificación{% endblock %}

{% block auth_content %}
    <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
        <div class="text-center mb-6">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">Verificación adicional requerida</h3>
            <p class="mt-2 text-sm text-gray-600">
                Para mayor seguridad, necesitas verificar tu identidad con un código adicional.
            </p>
        </div>

        <div class="space-y-4">
            <!-- Email Option -->
            <form method="post" action="{{ path('app_2fa_send') }}">
                <input type="hidden" name="channel" value="email">
                <button type="submit" class="w-full flex items-center p-4 border border-gray-300 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-colors group">
                    <div class="flex-shrink-0">
                        <div class="flex items-center justify-center h-10 w-10 rounded-lg bg-blue-100 group-hover:bg-blue-200">
                            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="ml-4 text-left">
                        <p class="text-base font-medium text-gray-900">Correo Electrónico</p>
                        <p class="text-sm text-gray-500">Enviar código a {{ user.email }}</p>
                    </div>
                    <div class="ml-auto">
                        <svg class="h-5 w-5 text-gray-400 group-hover:text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </div>
                </button>
            </form>

            <!-- WhatsApp Option (if available) -->
            {% if hasPhone %}
                <form method="post" action="{{ path('app_2fa_send') }}">
                    <input type="hidden" name="channel" value="whatsapp">
                    <button type="submit" class="w-full flex items-center p-4 border border-gray-300 rounded-lg hover:border-green-500 hover:bg-green-50 transition-colors group">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center h-10 w-10 rounded-lg bg-green-100 group-hover:bg-green-200">
                                <svg class="h-6 w-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.109"/>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4 text-left">
                            <p class="text-base font-medium text-gray-900">WhatsApp</p>
                            <p class="text-sm text-gray-500">Enviar código por mensaje</p>
                        </div>
                        <div class="ml-auto">
                            <svg class="h-5 w-5 text-gray-400 group-hover:text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </div>
                    </button>
                </form>
            {% endif %}
        </div>

        <div class="mt-6 text-center">
            <a href="{{ path('app_logout') }}" class="text-sm text-gray-500 hover:text-gray-700">
                Cancelar e iniciar sesión con otra cuenta
            </a>
        </div>
    </div>
{% endblock %}