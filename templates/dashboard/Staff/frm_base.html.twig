        <div class="form-group col-sm-6">
            {{ form_label(form.estadoLicenciaConducir,'Suspención de la licencia') }}
            {{ form_widget(form.estadoLicenciaConducir, {'attr': {'class': 'form-control'}}) }}
            <span class="text-danger">{{ form_errors(form.estadoLicenciaConducir) }}</span>
        </div>
        <div class="form-group col-sm-6">
            {{ form_label(form.autorizaOt,'Autoriza OT') }}
            {{ form_widget(form.autorizaOt, {'attr': {'class': 'form-control'}}) }}
            <span class="text-danger">{{ form_errors(form.autorizaOt) }}</span>
        </div>
    </fieldset>
</div>