        tspan {
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-size: 15px;
        }

        .highcharts-title tspan {
            font-size: 26px !important;
        }

        .highcharts-subtitle tspan {
            font-size: 15px !important;
        }

        .highcharts-axis-labels {
            font-size: 15px !important;
        }

        .highcharts-axis {
            font-size: 15px !important;
        }

        @page {
            margin: 5mm 1mm 5mm 1mm;
        }
