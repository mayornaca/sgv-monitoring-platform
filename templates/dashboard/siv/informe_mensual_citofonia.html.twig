{% block body_javascript %}
    {{ parent() }}
    <script>
        // Helper function to parse server date format (DD-MM-YYYY HH:mm:ss or partial)
        function parseServerDate(dateString) {
            if (!dateString || dateString.trim() === '') {
                return null;
            }

            try {
                // Normalizar espacios y reemplazar + por espacio (URL encoding)
                dateString = dateString.trim().replace(/\+/g, ' ');

                // Split por espacio para separar fecha y hora
                const parts = dateString.split(' ');

                // Parse fecha (DD-MM-YYYY)
                const datePart = parts[0];
                const dateComponents = datePart.split('-');

                if (dateComponents.length < 3) {
                    console.warn('Invalid date format:', dateString);
                    return null;
                }

                const day = parseInt(dateComponents[0], 10);
                const month = parseInt(dateComponents[1], 10) - 1; // JS months are 0-indexed
                const year = parseInt(dateComponents[2], 10);

                // Parse hora (HH:mm:ss) con defaults
                let hours = 0, minutes = 0, seconds = 0;

                if (parts.length > 1 && parts[1]) {
                    const timeComponents = parts[1].split(':');
                    hours = parseInt(timeComponents[0], 10) || 0;
                    minutes = parseInt(timeComponents[1], 10) || 0;
                    seconds = parseInt(timeComponents[2], 10) || 0;
                }

                return new Date(year, month, day, hours, minutes, seconds);
            } catch (e) {
                console.error('Error parsing date:', dateString, e);
                return null;
            }
        }

        jQuery(document).ready(function() {
            // Initialize Tempus Dominus 6 (Bootstrap 5 compatible) con try-catch para aislar errores
            try {
                const tempusDominus = window.tempusDominus;
                if (tempusDominus) {
                    const options = {
                        display: {
                            components: {
                                calendar: true,
                                date: true,
                                month: true,
                                year: true,
                                decades: true,
                                clock: true,
                                hours: true,
                                minutes: true,
                                seconds: true
                            },
                            icons: {
                                time: 'fas fa-clock',
                                date: 'fas fa-calendar',
                                up: 'fas fa-arrow-up',
                                down: 'fas fa-arrow-down',
                                previous: 'fas fa-chevron-left',
                                next: 'fas fa-chevron-right',
                                today: 'fas fa-calendar-check',
                                clear: 'fas fa-trash',
                                close: 'fas fa-times'
                            }
                        },
                        localization: {
                            locale: 'es',
                            format: 'dd-MM-yyyy HH:mm:ss',
                            hourCycle: 'h23'
                        },
                        useCurrent: false,
                        keepInvalid: true
                    };

                    // Parse fecha inicio desde servidor o usar default
                    let dateObjInicio = null;
                    {% if fechaInicio and fechaInicio != '' %}
                    const fechaInicioValue = '{{ fechaInicio|raw }}';
                    dateObjInicio = parseServerDate(fechaInicioValue);
                    if (dateObjInicio) {
                        options.viewDate = dateObjInicio;
                    }
                    {% endif %}

                    // Si no hay fecha del servidor, usar default (primer día mes anterior)
                    if (!dateObjInicio) {
                        dateObjInicio = new Date();
                        dateObjInicio.setMonth(dateObjInicio.getMonth() - 1);
                        dateObjInicio.setDate(1);
                        dateObjInicio.setHours(0, 0, 0, 0);
                        options.viewDate = dateObjInicio;
                    }

                    // Initialize fecha inicio
                    let pickerInicio = null;
                    if (document.getElementById('dtpFechaInicio')) {
                        pickerInicio = new tempusDominus.TempusDominus(document.getElementById('dtpFechaInicio'), options);
                        if (dateObjInicio) {
                            pickerInicio.dates.setValue(dateObjInicio);
                        }
                    }

                    // Parse fecha termino desde servidor o usar default
                    let dateObjTermino = null;
                    {% if fechaTermino and fechaTermino != '' %}
                    const fechaTerminoValue = '{{ fechaTermino|raw }}';
                    dateObjTermino = parseServerDate(fechaTerminoValue);
                    if (dateObjTermino) {
                        options.viewDate = dateObjTermino;
                    } else {
                        delete options.viewDate;
                    }
                    {% else %}
                    delete options.viewDate;
                    {% endif %}

                    // Si no hay fecha del servidor, usar default (último día mes anterior)
                    if (!dateObjTermino) {
                        dateObjTermino = new Date();
                        dateObjTermino.setDate(0);
                        dateObjTermino.setHours(23, 59, 59, 0);
                        options.viewDate = dateObjTermino;
                    }

                    // Initialize fecha término
                    let pickerTermino = null;
                    if (document.getElementById('dtpFechaTermino')) {
                        pickerTermino = new tempusDominus.TempusDominus(document.getElementById('dtpFechaTermino'), options);
                        if (dateObjTermino) {
                            pickerTermino.dates.setValue(dateObjTermino);
                        }
                    }
                }
            } catch (e) {
                console.error('Error inicializando date pickers:', e);
            }

            // Loader en submit del formulario
            jQuery('#report_params').on('submit', function() {
                ReportLoader.show('#btn-generar-informe', 'Generando...');
            });

        });

        // Función para descargar PDF con XHR en segundo plano
        function downloadInformeMensualPdf() {
            ReportLoader.show('#btn-export-pdf-citofonia', 'Descargando...');

            const xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function() {
                if (xhttp.readyState === 4) {
                    ReportLoader.hide('#btn-export-pdf-citofonia');
                    if (xhttp.status === 200) {
                        var filename = 'Informe_Mensual_Citofonia_' + new Date().getTime() + '.pdf';
                        var disposition = xhttp.getResponseHeader('Content-Disposition');
                        if (disposition && disposition.indexOf('attachment') !== -1) {
                            var filenameRegex = /filename[^;=\n]*=((['"]).*?\2|[^;\n]*)/;
                            var matches = filenameRegex.exec(disposition);
                            if (matches != null && matches[1]) {
                                filename = matches[1].replace(/['"]/g, '');
                            }
                        }

                        const a = document.createElement('a');
                        a.href = window.URL.createObjectURL(xhttp.response);
                        a.download = filename;
                        a.style.display = 'none';
                        document.body.appendChild(a);
                        a.click();
                        document.body.removeChild(a);
                        window.URL.revokeObjectURL(a.href);
                    } else {
                        alert('Error al descargar el archivo PDF');
                    }
                }
            };
            xhttp.onerror = function() {
                ReportLoader.hide('#btn-export-pdf-citofonia');
                alert('Error al descargar el archivo PDF');
            };
            xhttp.open('GET', '{{ path('admin_siv_dashboard_informe_mensual_citofonia_export_pdf', {
                'fechaInicio': fechaInicio,
                'fechaTermino': fechaTermino
            }) }}');
            xhttp.responseType = 'blob';
            xhttp.send();
        }

        // Función para descargar Excel con XHR en segundo plano
        function downloadInformeMensualExcel() {
            ReportLoader.show('#btn-export-excel-citofonia', 'Descargando...');

            const xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function() {
                if (xhttp.readyState === 4) {
                    ReportLoader.hide('#btn-export-excel-citofonia');
                    if (xhttp.status === 200) {
                        var filename = 'Informe_Mensual_Citofonia_' + new Date().getTime() + '.xlsx';
                        var disposition = xhttp.getResponseHeader('Content-Disposition');
                        if (disposition && disposition.indexOf('attachment') !== -1) {
                            var filenameRegex = /filename[^;=\n]*=((['"]).*?\2|[^;\n]*)/;
                            var matches = filenameRegex.exec(disposition);
                            if (matches != null && matches[1]) {
                                filename = matches[1].replace(/['"]/g, '');
                            }
                        }

                        const a = document.createElement('a');
                        a.href = window.URL.createObjectURL(xhttp.response);
                        a.download = filename;
                        a.style.display = 'none';
                        document.body.appendChild(a);
                        a.click();
                        document.body.removeChild(a);
                        window.URL.revokeObjectURL(a.href);
                    } else {
                        alert('Error al descargar el archivo Excel');
                    }
                }
            };
            xhttp.onerror = function() {
                ReportLoader.hide('#btn-export-excel-citofonia');
                alert('Error al descargar el archivo Excel');
            };
            xhttp.open('GET', '{{ path('admin_siv_dashboard_informe_mensual_citofonia_export_excel', {
                'fechaInicio': fechaInicio,
                'fechaTermino': fechaTermino
            }) }}');
            xhttp.responseType = 'blob';
            xhttp.send();
        }

        function formatDate(date) {
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const year = date.getFullYear();
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            const seconds = String(date.getSeconds()).padStart(2, '0');
            return `${day}-${month}-${year} ${hours}:${minutes}:${seconds}`;
        }

        function resetForm() {
            document.getElementById('report_params').reset();
            // Set default dates again
            const defaultInicio = new Date();
            defaultInicio.setMonth(defaultInicio.getMonth() - 1);
            defaultInicio.setDate(1);
            defaultInicio.setHours(0, 0, 0, 0);
            jQuery('#fechaInicio').val(formatDate(defaultInicio));

            const defaultTermino = new Date();
            defaultTermino.setDate(0);
            defaultTermino.setHours(23, 59, 0, 0);
            jQuery('#fechaTermino').val(formatDate(defaultTermino));
        }
    </script>
{% endblock %}