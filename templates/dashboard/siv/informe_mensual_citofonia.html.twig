                                            <th class="text-center">{{ totalRow.corte_llamada_r }}</th>
                                            <th class="text-center">{{ totalRow.prueba_trabajo_postes_r }}</th>
                                            <th class="text-center">{{ totalRow.reclamo_r }}</th>
                                            <th class="text-center">{{ totalRow.registro_incidente_r }}</th>
                                            <th class="text-center">{{ totalRow.total_r }}</th>
                                            <th class="text-center">{{ totalRow.realizada_por_sos_r }}</th>
                                            <th class="text-center" style="background-color: cornsilk;">{{ totalRow.realizada_por_usuario_a_sos_r }}</th>
