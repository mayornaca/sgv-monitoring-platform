                                    <i class="fas fa-search me-2"></i>Generar Reporte
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {# Tabla de Resultados #}
        {% if data_table is defined and data_table|length > 0 %}
