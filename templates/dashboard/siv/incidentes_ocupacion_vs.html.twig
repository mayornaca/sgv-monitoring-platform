{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Incidentes Ocupación (VESPUCIO SUR){% endblock %}

{% block content_title %}{% endblock %}

{% block content_top_header %}
    <div class="d-flex align-items-center gap-2">
        <h5 class="m-0">
            <i class="fas fa-road" style="color: var(--color-primary, #5368d5);"></i>
            Incidentes Ocupación (VESPUCIO SUR)
        </h5>
    </div>
    {{ parent() }}
{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <!-- Bootstrap Table CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-table@1.22.1/dist/bootstrap-table.min.css">
    <!-- Tempus Dominus 6 CSS (Bootstrap 5 compatible) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@eonasdan/tempus-dominus@6/dist/css/tempus-dominus.min.css">
    <style>
        .table-responsive { margin-top: 20px; }
        .badge { padding: 5px 10px; }
    </style>
{% endblock %}

{% block configured_head_contents %}
    {{ parent() }}
    <!-- jQuery (necesario ANTES de Bootstrap y plugins) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <!-- Popper.js (requerido por Tempus Dominus) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <!-- Tempus Dominus 6 JS (Bootstrap 5 compatible) -->
    <script src="https://cdn.jsdelivr.net/npm/@eonasdan/tempus-dominus@6/dist/js/tempus-dominus.min.js"></script>
    <!-- Bootstrap Table JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.22.1/dist/bootstrap-table.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.22.1/dist/locale/bootstrap-table-es-ES.min.js"></script>
    <!-- Report Loader -->
    <script src="{{ asset('js/report-loader.js') }}"></script>
{% endblock %}

{% block page_content %}
    <div id="main-wrapper" class="container-fluid">
        <!-- Barra de acciones -->
        <div class="mb-3">
            <div class="btn-group">
                <button class="btn btn-info" type="button">
                    Total registros: <span id="total" class="badge bg-light text-dark">{{ data_table|length|default(0) }}</span>
                </button>
                <button id="toggle_task_bar" type="button" class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#filter-panel">
                    <i class="fas fa-filter"></i> Filtros & Opciones
                </button>
                {% if return_file_name_excel is defined and return_file_name_excel %}
                    <button id="btn-exp-xls" type="button" class="btn btn-success">
                        <i class="fas fa-download"></i> Descargar Excel
                    </button>
                {% endif %}
            </div>
        </div>

        <!-- Panel de filtros -->
        <div class="mb-3">
            <div id="filter-panel" class="filter-panel collapse show">
                <div class="card">
                    <div class="card-body">
                        <form id="report_params" class="row g-3" action="" method="get">
                            <input type="hidden" value="1" id="ci" name="ci">

                            <div class="col-md-3">
                                <label for="fechaInicio" class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>Fecha de inicio
                                </label>
                                <div class="input-group" id="dtpFechaInicio">
                                    <input type="text" id="fechaInicio" name="fechaInicio" class="form-control required"
                                           placeholder="DD-MM-YYYY HH:mm:ss" value="{{ fechaInicio }}">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label for="fechaTermino" class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>Fecha de término
                                </label>
                                <div class="input-group" id="dtpFechaTermino">
                                    <input type="text" id="fechaTermino" name="fechaTermino" class="form-control required"
                                           placeholder="DD-MM-YYYY HH:mm:ss" value="{{ fechaTermino }}">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">
                                    <i class="fas fa-file-excel me-1"></i>Exportar a Excel
                                </label>
                                <div class="form-check form-switch" style="padding-top: 8px;">
                                    <input class="form-check-input" type="checkbox" name="generateExcel" id="generateExcel" value="true">
                                    <label class="form-check-label" for="generateExcel">
                                        Generar archivo Excel
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-3 d-flex align-items-end">
                                <button id="btn_submit" type="submit" class="btn btn-warning w-100">
                                    <i class="fas fa-play-circle"></i> Generar reporte
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de datos -->
        {% if data_table is defined and data_table|length > 0 %}
            <div class="table-responsive">
                <table id="table-data"
                       class="table table-striped table-hover table-bordered"
                       data-toggle="table"
                       data-search="true"
                       data-pagination="true"
                       data-page-size="50"
                       data-page-list="[10, 25, 50, 100, 200, 500]"
                       data-show-columns="true"
                       data-show-toggle="true"
                       data-show-export="false"
                       data-locale="es-ES">
                    <thead>
                        <tr>
                            <th data-field="num_incidente_r" data-sortable="true">Código del incidente</th>
                            <th data-field="tipo_incidente_r" data-sortable="true">Tipo de incidente</th>
                            <th data-field="descripcion_r" data-sortable="true">Descripción</th>
                            <th data-field="tramo_r" data-sortable="true">Tramo</th>
                            <th data-field="calzada_r" data-sortable="true">Calzada</th>
                            <th data-field="ubicacion_r" data-sortable="true">Ubicación</th>
                            <th data-field="informado_por_r" data-sortable="true">Informado Por</th>
                            <th data-field="observacion_r" data-sortable="true">Observaciones</th>
                            <th data-field="fechahora_creacion_r" data-sortable="true">Fecha hora creación</th>
                            <th data-field="fechahora_finalizacion_r" data-sortable="true">Fecha de finalización</th>
                            <th data-field="sentido_r" data-sortable="true">Sentido</th>
                            <th data-field="pk_desde_r" data-sortable="true">PK Desde</th>
                            <th data-field="pk_hasta_r" data-sortable="true">PK Hasta</th>
                            <th data-field="sector_r" data-sortable="true">Sector</th>
                            <th data-field="fechahora_creacion_incidente_r" data-sortable="true">Fecha hora creación incidente</th>
                            <th data-field="fechahora_fin_ultimo_control_tto_r" data-sortable="true">Fecha hora fin último control TTO</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in data_table %}
                            <tr>
                                <td>{{ row.num_incidente_r ?? '' }}</td>
                                <td>{{ row.tipo_incidente_r ?? '' }}</td>
                                <td>{{ row.descripcion_r ?? '' }}</td>
                                <td>{{ row.tramo_r ?? '' }}</td>
                                <td>{{ row.calzada_r ?? '' }}</td>
                                <td>{{ row.ubicacion_r ?? '' }}</td>
                                <td>{{ row.informado_por_r ?? '' }}</td>
                                <td>{{ row.observacion_r ?? '' }}</td>
                                <td>{{ row.fechahora_creacion_r ?? '' }}</td>
                                <td>{{ row.fechahora_finalizacion_r ?? '' }}</td>
                                <td>{{ row.sentido_r ?? '' }}</td>
                                <td>{{ row.pk_desde_r ?? '' }}</td>
                                <td>{{ row.pk_hasta_r ?? '' }}</td>
                                <td>{{ row.sector_r ?? '' }}</td>
                                <td>{{ row.fechahora_creacion_incidente_r ?? '' }}</td>
                                <td>{{ row.fechahora_fin_ultimo_control_tto_r ?? '' }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                {% if fechaInicio and fechaTermino %}
                    No se encontraron registros para el rango de fechas seleccionado.
                {% else %}
                    Seleccione un rango de fechas y haga clic en "Generar reporte" para mostrar los datos.
                {% endif %}
            </div>
        {% endif %}

        <!-- Footer con logos -->
        <div class="row mt-4">
            <div class="col-6 text-start">
                <img src="{{ asset('images/concessions/vs_logo.png') }}" alt="Logo Vespucio Sur" style="height: 60px;">
            </div>
            <div class="col-6 text-end">
                <img src="{{ asset('images/coordinacion_concesiones_obras_publicas.jpg') }}" alt="Logo MOP" style="height: 80px;">
            </div>
        </div>

    </div>

    {% if return_file_name_excel is defined and return_file_name_excel %}
        <script>
            document.getElementById("btn-exp-xls").addEventListener('click', async function() {
                try {
                    const response = await fetch('{{ path('admin_cot_download_files', { path_name_file: return_file_name_excel|url_encode }) }}');

                    if (!response.ok) {
                        throw new Error('Error al descargar el archivo');
                    }

                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = "{{ return_file_name_excel }}";
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                } catch (error) {
                    console.error('Error descargando archivo:', error);
                    alert("Ha ocurrido un error al intentar descargar el archivo.");
                }
            });
        </script>
    {% endif %}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar Tempus Dominus para fecha de inicio
            const datetimepickerInicio = new tempusDominus.TempusDominus(document.getElementById('dtpFechaInicio'), {
                localization: {
                    format: 'dd-MM-yyyy HH:mm:ss',
                    locale: 'es'
                },
                display: {
                    sideBySide: true,
                    components: {
                        calendar: true,
                        date: true,
                        month: true,
                        year: true,
                        decades: true,
                        clock: true,
                        hours: true,
                        minutes: true,
                        seconds: true
                    }
                }
            });

            // Inicializar Tempus Dominus para fecha de término
            const datetimepickerTermino = new tempusDominus.TempusDominus(document.getElementById('dtpFechaTermino'), {
                localization: {
                    format: 'dd-MM-yyyy HH:mm:ss',
                    locale: 'es'
                },
                display: {
                    sideBySide: true,
                    components: {
                        calendar: true,
                        date: true,
                        month: true,
                        year: true,
                        decades: true,
                        clock: true,
                        hours: true,
                        minutes: true,
                        seconds: true
                    }
                }
            });
        });
    </script>
{% endblock %}
