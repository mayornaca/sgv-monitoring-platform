<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Informe Mensual de Citofonía</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 11px;
            color: #333;
        }

        .container {
            width: 100%;
            padding: 5px;
        }

        .header {
            border: 1px solid #ddd;
            padding: 8px;
            margin-bottom: 10px;
            background-color: #f8f9fa;
        }

        .header h2 {
            font-size: 16px;
            color: #1b809e;
            margin-bottom: 8px;
        }

        .header-info {
            font-size: 10px;
            line-height: 1.6;
        }

        .header-right {
            text-align: right;
            font-size: 10px;
            margin-top: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }

        table thead th {
            background-color: #ffffff;
            color: #333;
            padding: 8px 4px;
            text-align: center;
            font-size: 9px;
            border: 1px solid #ddd;
            vertical-align: middle;
            line-height: 1.3;
            font-weight: bold;
        }

        table tbody td,
        table tbody th {
            padding: 6px 4px;
            border: 1px solid #f1f1f1;
            text-align: center;
            font-size: 10px;
        }

        table tbody th {
            text-align: left;
            font-weight: bold;
        }

        table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tfoot th {
            background-color: #e9ecef;
            padding: 8px 4px;
            border: 1px solid #ddd;
            text-align: center;
            font-weight: bold;
            font-size: 10px;
        }

        table tfoot th:first-child {
            text-align: left;
        }

        table tfoot th.total-column {
            background-color: #e9ecef;
            color: #333;
        }

        .col9-highlight {
            background-color: #fff8dc !important;
        }

        .footer {
            margin-top: 15px;
            padding-top: 10px;
            border-top: 2px solid #ddd;
            page-break-inside: avoid;
        }

        .footer-content {
            display: table;
            width: 100%;
        }

        .footer-left,
        .footer-center,
        .footer-right {
            display: table-cell;
            vertical-align: middle;
            width: 33.33%;
        }

        .footer-left img {
            max-height: 60px;
        }

        .footer-center {
            text-align: center;
            font-size: 11px;
        }

        .footer-right img {
            max-height: 85px;
            float: right;
        }

        @page {
            margin: 8mm 8mm 8mm 8mm;
        }
    </style>
</head>
<body>
    <div class="container">
        {# Header #}
        <div class="header">
            <h2>Informe Mensual de Citofonía</h2>
            <div class="header-info">
                Periodo de consulta desde {{ fechaInicio }} hasta {{ fechaTermino }}<br>
                Obra concesionada: Autopista Costanera Norte<br>
                Año: {{ "now"|date('Y') }}
            </div>
            <div class="header-right">
                {{ "now"|date('d-m-Y H:i:s') }}
            </div>
        </div>

        {# Table #}
        <table>
            <thead>
                <tr>
                    <th style="width: 10%;">Mes</th>
                    <th style="width: 8%;">Consulta por<br>información<br>de call center</th>
                    <th style="width: 8%;">Consulta por<br>condiciones<br>de la vía</th>
                    <th style="width: 8%;">Corte de<br>llamada</th>
                    <th style="width: 8%;">Prueba/Trabajo<br>de Poste en la<br>autopista</th>
                    <th style="width: 8%;">Reclamos</th>
                    <th style="width: 8%;">Registro de<br>incidente</th>
                    <th style="width: 8%;">Total</th>
                    <th style="width: 10%;">Realizadas por<br>postes SOS</th>
                    <th style="width: 10%;" class="col9-highlight">Realizadas por<br>usuarios a<br>Postes SOS</th>
                    <th style="width: 10%;">Realizadas por<br>24900767</th>
                </tr>
            </thead>
            <tbody>
                {% if data_table is defined and data_table %}
                    {% for row in data_table %}
                        {% if row.mes_r != 'Total' %}
                        <tr>
                            <th>{{ row.mes_r }}</th>
                            <td>{{ row.call_center_r }}</td>
                            <td>{{ row.consulta_via_r }}</td>
                            <td>{{ row.corte_llamada_r }}</td>
                            <td>{{ row.prueba_trabajo_postes_r }}</td>
                            <td>{{ row.reclamo_r }}</td>
                            <td>{{ row.registro_incidente_r }}</td>
                            <td><strong>{{ row.total_r }}</strong></td>
                            <td>{{ row.realizada_por_sos_r }}</td>
                            <td class="col9-highlight">{{ row.realizada_por_usuario_a_sos_r }}</td>
                            <td>{{ row.realizada_por_767_r }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </tbody>
            <tfoot>
                {% if data_table is defined and data_table %}
                    {% set totalRow = data_table|last %}
                    {% if totalRow.mes_r == 'Total' %}
                    <tr>
                        <th>{{ totalRow.mes_r }}</th>
                        <th>{{ totalRow.call_center_r }}</th>
                        <th>{{ totalRow.consulta_via_r }}</th>
                        <th>{{ totalRow.corte_llamada_r }}</th>
                        <th>{{ totalRow.prueba_trabajo_postes_r }}</th>
                        <th>{{ totalRow.reclamo_r }}</th>
                        <th>{{ totalRow.registro_incidente_r }}</th>
                        <th class="total-column">{{ totalRow.total_r }}</th>
                        <th>{{ totalRow.realizada_por_sos_r }}</th>
                        <th class="col9-highlight">{{ totalRow.realizada_por_usuario_a_sos_r }}</th>
                        <th>{{ totalRow.realizada_por_767_r }}</th>
                    </tr>
                    {% endif %}
                {% endif %}
            </tfoot>
        </table>
    </div>

    {# Footer with logos #}
    <div class="footer">
        <div class="footer-content">
            <div class="footer-left">
                <img src="{{ absolute_url(asset('images/concessions/HCSQELGZDdo.png')) }}" alt="Logo Concesionaria">
            </div>
            <div class="footer-center">
                <p>Sociedad Concesionaria Costanera Norte</p>
            </div>
            <div class="footer-right">
                <img src="{{ absolute_url(asset('images/coordinacion_concesiones_obras_publicas.jpg')) }}" alt="Logo MOP">
            </div>
        </div>
    </div>
</body>
</html>
