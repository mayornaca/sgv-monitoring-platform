{% block body_javascript %}
    {{ parent() }}
    <script>
        jQuery(document).ready(function() {
            /*
             ANTES DE ENVIAR EL FORMULARIO VERIFICO QUE LA INFORMACIÓN SEA INTEGRA Y COHERENTE
             */
            $("#report_params").submit(function() {
                if(validaRequeridos()){
