{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Tiempos de respuesta por incidente{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-group.stick-top.go-to-graphic.affix {
            top: 73px;
            left: 1px;
            z-index: 1000;
        }
    </style>
{% endblock %}

{% block page_content %}
    <div id="main-wrapper" class="container-fluid">
        <div class="page-header mb-3">
            <h1 class="h2">Tiempos de Respuesta por Incidente</h1>

            <div class="btn-group">
                <button class="btn btn-info" type="button">
                    Total records: <span id="total" class="badge bg-light text-dark">{{ data_table|length|default(0) }}</span>
                </button>
                <button id="toggle_task_bar" type="button" class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#filter-panel">
                    <i class="fas fa-filter"></i> Filtros & Opciones
                </button>
            </div>
        </div>

        <!-- Filtros -->
        <div class="mb-3" onmouseover="stopTimerToggleTaskBar();">
            <div id="filter-panel" class="filter-panel collapse show">
                <div class="card">
                    <div class="card-body">
                        <form id="report_params" class="row g-3" action="" method="get">
                            <input type="hidden" value="1" id="ci" name="ci">

                            <div class="col-md-3">
                                <label for="fechaInicio" class="form-label">Fecha de inicio</label>
                                <div class="input-group">
                                    <input type="text" id="fechaInicio" name="fechaInicio" class="form-control required"
                                           placeholder="DD-MM-YYYY HH:mm:ss" value="{{ fechaInicio }}">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label for="fechaTermino" class="form-label required">Fecha de t�rmino</label>
                                <div class="input-group">
                                    <input type="text" id="fechaTermino" name="fechaTermino" class="form-control required"
                                           placeholder="DD-MM-YYYY HH:mm:ss" value="{{ fechaTermino }}">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label for="p_ruta" class="form-label">Ruta</label>
                                <select class="form-select" id="p_ruta" name="p_ruta">
                                    <option value="0">Todas</option>
                                    <option value="1">Ruta 1</option>
                                    <option value="2">Ruta 2</option>
                                </select>
                            </div>

                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-play-circle"></i> Generar reporte
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de datos -->
        {% if data_table is defined and data_table|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Incidente</th>
                            <th>Tipo</th>
                            <th>Fecha/Hora</th>
                            <th>Ubicaci�n</th>
                            <th>Tiempo Detecci�n</th>
                            <th>Tiempo Respuesta</th>
                            <th>Tiempo Resoluci�n</th>
                            <th>Total</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in data_table %}
                            <tr>
                                <td>{{ row.incidente|default('-') }}</td>
                                <td>{{ row.tipo_contingencia_evento|default('-') }}</td>
                                <td>{{ row.fecha|default('-') }}</td>
                                <td>{{ row.ejes|default('-') }} - PK {{ row.pk|default('-') }}</td>
                                <td>{{ row.tiempo_deteccion|default('-') }}</td>
                                <td>{{ row.tiempo_respuesta|default('-') }}</td>
                                <td>{{ row.tiempo_resolucion|default('-') }}</td>
                                <td><strong>{{ row.tiempo_total|default('-') }}</strong></td>
                                <td>
                                    <span class="badge bg-{{ row.estado == 'resuelto' ? 'success' : 'warning' }}">
                                        {{ row.estado|default('pendiente')|upper }}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-2x mb-3"></i>
                <h5>No se encontraron datos</h5>
                <p>Ajuste los filtros de b�squeda e intente nuevamente</p>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var timer_toggle_task_bar;
        var stoped = false;

        function stopTimerToggleTaskBar() {
            if (!stoped) {
                clearTimeout(timer_toggle_task_bar);
                stoped = true;
            }
        }

        $(document).ready(function() {
            timer_toggle_task_bar = setTimeout(function() {
                $("#toggle_task_bar").trigger("click");
            }, 600);
        });
    </script>
{% endblock %}