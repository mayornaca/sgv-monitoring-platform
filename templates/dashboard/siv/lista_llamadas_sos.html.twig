{% block body_javascript %}
    {{ parent() }}
    <script>
        // Helper function to parse server date format (DD-MM-YYYY HH:mm:ss or partial)
        function parseServerDate(dateString) {
            if (!dateString || dateString.trim() === '') {
                return null;
            }

            try {
                // Normalizar espacios y reemplazar + por espacio (URL encoding)
                dateString = dateString.trim().replace(/\+/g, ' ');

                // Split por espacio para separar fecha y hora
                const parts = dateString.split(' ');

                // Parse fecha (DD-MM-YYYY)
                const datePart = parts[0];
                const dateComponents = datePart.split('-');

                if (dateComponents.length < 3) {
                    console.warn('Invalid date format:', dateString);
                    return null;
                }

                const day = parseInt(dateComponents[0], 10);
                const month = parseInt(dateComponents[1], 10) - 1; // JS months are 0-indexed
                const year = parseInt(dateComponents[2], 10);

                // Parse hora (HH:mm:ss) con defaults
                let hours = 0, minutes = 0, seconds = 0;

                if (parts.length > 1 && parts[1]) {
                    const timeComponents = parts[1].split(':');
                    hours = parseInt(timeComponents[0], 10) || 0;
                    minutes = parseInt(timeComponents[1], 10) || 0;
                    seconds = parseInt(timeComponents[2], 10) || 0;
                }

                return new Date(year, month, day, hours, minutes, seconds);
            } catch (e) {
                console.error('Error parsing date:', dateString, e);
                return null;
            }
        }

        jQuery(document).ready(function() {
            // Initialize Tempus Dominus 6 date pickers con try-catch para aislar errores
            try {
                const tempusDominus = window.tempusDominus;
                if (tempusDominus) {
                    const dateOptions = {
                        display: {
                            components: {
                                calendar: true,
                                date: true,
                                month: true,
                                year: true,
                                decades: true,
                                clock: true,
                                hours: true,
                                minutes: true,
                                seconds: true
                            },
                            icons: {
                                time: 'fas fa-clock',
                                date: 'fas fa-calendar',
                                up: 'fas fa-arrow-up',
                                down: 'fas fa-arrow-down',
                                previous: 'fas fa-chevron-left',
                                next: 'fas fa-chevron-right',
                                today: 'fas fa-calendar-check',
                                clear: 'fas fa-trash',
                                close: 'fas fa-times'
                            }
                        },
                        localization: {
                            locale: 'es',
                            format: 'dd-MM-yyyy HH:mm:ss',
                            hourCycle: 'h23'
                        },
                        useCurrent: false,
                        keepInvalid: true
                    };

                    // Parse fecha inicio desde servidor
                    let dateObjInicio = null;
                    {% if fechaInicio %}
                    const fechaInicioValue = '{{ fechaInicio|raw }}';
                    dateObjInicio = parseServerDate(fechaInicioValue);
                    if (dateObjInicio) {
                        dateOptions.viewDate = dateObjInicio;
                    }
                    {% endif %}

                    // Initialize picker for Fecha Inicio
                    const pickerInicio = new tempusDominus.TempusDominus(document.getElementById('dtpFechaInicio'), dateOptions);

                    // Set value after initialization
                    if (dateObjInicio) {
                        pickerInicio.dates.setValue(dateObjInicio);
                    }

                    // Parse fecha termino desde servidor
                    let dateObjTermino = null;
                    {% if fechaTermino %}
                    const fechaTerminoValue = '{{ fechaTermino|raw }}';
                    dateObjTermino = parseServerDate(fechaTerminoValue);
                    if (dateObjTermino) {
                        dateOptions.viewDate = dateObjTermino;
                    } else {
                        delete dateOptions.viewDate;
                    }
                    {% else %}
                    delete dateOptions.viewDate;
                    {% endif %}

                    // Initialize picker for Fecha Termino
                    const pickerTermino = new tempusDominus.TempusDominus(document.getElementById('dtpFechaTermino'), dateOptions);

                    // Set value after initialization
                    if (dateObjTermino) {
                        pickerTermino.dates.setValue(dateObjTermino);
                    }
                }
            } catch (e) {
                console.error('Error inicializando date pickers:', e);
            }

            // Loader en submit del formulario
            jQuery('#report_filters').on('submit', function() {
                ReportLoader.show('#btn-generar-sos', 'Generando...');
            });

            // Loaders para botones de descarga directa
            jQuery('#btn-export-excel-sos').on('click', function() {
                ReportLoader.showForDirectDownload('#btn-export-excel-sos', 'Descargando...', 2000);
            });

            jQuery('#btn-export-pdf-sos').on('click', function() {
                ReportLoader.showForDirectDownload('#btn-export-pdf-sos', 'Descargando...', 2000);
            });
        });
    </script>
{% endblock %}
