{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Lista de Llamadas SOS{% endblock %}

{# Sobrescribir content_title para eliminar el H1 que ocupa espacio #}
{% block content_title %}{% endblock %}

{# Agregar título en el toolbar superior (content_top_header) #}
{% block content_top_header %}
    <div class="d-flex align-items-center gap-2">
        <h5 class="m-0">
            <i class="fas fa-phone-volume" style="color: var(--color-primary, #5368d5);"></i>
            Lista de Llamadas SOS
        </h5>
    </div>

    {# Keep the original search, user menu, and settings #}
    {{ parent() }}
{% endblock %}

{% block page_content %}
    <div class="container-fluid py-4">
        <div class="row mb-4">
            <div class="col-12">
                {# Panel de Filtros #}
                <div id="filter-panel" class="filter-panel">
                    <form id="report_filters" method="get" action="{{ path('admin_lista_llamadas_sos') }}">
                        <input type="hidden" name="ci" value="1">

                        <div class="row g-3">
                            <div class="col-md-3">
                                <label for="fechaInicio" class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>Fecha de Inicio
                                </label>
                                <div class="input-group" id="dtpFechaInicio">
                                    <input type="text"
                                           id="fechaInicio"
                                           name="fechaInicio"
                                           class="form-control"
                                           placeholder="Fecha de inicio"
                                           value="{{ fechaInicio }}">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label for="fechaTermino" class="form-label">
                                    <i class="fas fa-calendar-check me-1"></i>Fecha de Término
                                </label>
                                <div class="input-group" id="dtpFechaTermino">
                                    <input type="text"
                                           id="fechaTermino"
                                           name="fechaTermino"
                                           class="form-control"
                                           placeholder="Fecha de término"
                                           value="{{ fechaTermino }}">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Opciones Adicionales</label>
                                <div class="row g-2">
                                    <div class="col-md-5">
                                        <input type="text" class="form-control" id="filterSos" name="filterSos"
                                               value="{{ app.request.get('filterSos') }}"
                                               placeholder="Filtrar por Poste SOS">
                                    </div>
                                    <div class="col-md-3">
                                        <select class="form-select" id="pageSize" name="pageSize">
                                            {% set currentPageSize = app.request.get('pageSize', 20) %}
                                            {% for size in [10, 20, 50, 100, 500, 1000] %}
                                                <option value="{{ size }}" {% if currentPageSize == size %}selected{% endif %}>{{ size }} filas</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="export-section d-flex gap-1">
                                            <a href="{{ path('admin_lista_llamadas_sos_export_excel', {
                                                'fechaInicio': fechaInicio,
                                                'fechaTermino': fechaTermino,
                                                'filterSos': filterSos,
                                                'pageSize': pageSize
                                            }) }}" id="btn-export-excel-sos" class="btn btn-success flex-fill" title="Descargar Excel">
                                                <i class="fas fa-file-excel me-1"></i>Excel
                                            </a>
                                            <a href="{{ path('admin_lista_llamadas_sos_export_pdf', {
                                                'fechaInicio': fechaInicio,
                                                'fechaTermino': fechaTermino,
                                                'filterSos': filterSos,
                                                'pageSize': pageSize
                                            }) }}" id="btn-export-pdf-sos" class="btn btn-danger flex-fill" target="_blank" title="Descargar PDF">
                                                <i class="fas fa-file-pdf me-1"></i>PDF
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary" id="btn-generar-sos">
                                    <i class="fas fa-search me-2"></i>Generar Reporte
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="window.location.href='{{ path('admin_lista_llamadas_sos') }}'">
                                    <i class="fas fa-undo me-2"></i>Limpiar
                                </button>
                                <span class="ms-3 text-muted">
                                    Total de registros: <strong>{{ pagination.getTotalItemCount }}</strong>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {# Tabla de Resultados #}
        <div class="row">
            <div class="col-12">
                <div class="table-container">
                    <div class="table-responsive">
                        <table id="sosTable" class="table table-striped table-hover table-sm table-bordered"
                               data-toggle="table"
                               data-search="true"
                               data-show-refresh="true"
                               data-show-columns="true"
                               data-show-fullscreen="true"
                               data-icons-prefix="fa"
                               data-icons='{"refresh":"fa-sync","columns":"fa-columns","fullscreen":"fa-expand"}'>
                            <thead>
                                <tr>
                                    <th data-sortable="true" class="text-start align-middle">Poste</th>
                                    <th data-sortable="true" class="text-center align-middle">Eje</th>
                                    <th data-sortable="true" class="text-center align-middle">Calzada</th>
                                    <th data-sortable="true" class="text-center align-middle">Km</th>
                                    <th data-sortable="true" class="text-center align-middle">Fecha Hora</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for llamada in pagination %}
                                    <tr>
                                        <td>{{ llamada.sos }}</td>
                                        <td class="text-center">{{ llamada.eje }}</td>
                                        <td class="text-center">{{ llamada.calzada }}</td>
                                        <td class="text-center">{{ llamada.km|number_format(3, ',', '.') }}</td>
                                        <td class="text-center">
                                            {% if llamada.fechaUtc %}
                                                {{ llamada.fechaUtc|date('d-m-Y H:i:s') }}
                                            {% else %}
                                                {{ llamada.fechaHora }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center">
                                            <div class="alert alert-info mb-0">
                                                <i class="fas fa-info-circle me-2"></i>No se encontraron llamadas SOS para los filtros seleccionados
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Paginación #}
                    <div class="navigation mt-3">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer with Logos -->
        <div class="row mt-4 align-items-center">
            <div class="col-md-4">
                <img src="/images/concessions/HCSQELGZDdo.png" alt="Concesionaria" class="img-fluid" style="max-height: 65px;">
            </div>
            <div class="col-md-4 text-center">
                <p class="mb-0">Sociedad Concesionaria Costanera Norte</p>
            </div>
            <div class="col-md-4 text-end">
                <img src="/images/coordinacion_concesiones_obras_publicas.jpg" alt="MOP" class="img-fluid" style="max-height: 95px;">
            </div>
        </div>
    </div>
{% endblock %}

