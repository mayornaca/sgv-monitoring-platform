{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Tiempos Recursos Externos Accidentes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-group.stick-top.go-to-graphic.affix {
            top: 73px;
            left: 1px;
            z-index: 1000;
        }
        .table-responsive { margin-top: 20px; }
        .badge { padding: 5px 10px; }
    </style>
{% endblock %}

{% block page_content %}
    <div id="main-wrapper" class="container-fluid">
        <div class="page-header mb-3">
            <h1 class="h2">Tiempos Recursos Externos</h1>

            <div class="btn-group">
                <button class="btn btn-info" type="button">
                    Total records: <span id="total" class="badge bg-light text-dark">{{ data_table|length|default(0) }}</span>
                </button>
                <button id="toggle_task_bar" type="button" class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#filter-panel">
                    <i class="fas fa-filter"></i> Filtros & Opciones
                </button>
            </div>
        </div>

        <!-- Inicio form de filtros -->
        <div class="mb-3" onmouseover="stopTimerToggleTaskBar();">
            <div id="filter-panel" class="filter-panel collapse show">
                <div class="card">
                    <div class="card-body">
                        <form id="report_params" class="row g-3" action="" method="get">
                            <input type="hidden" value="1" id="ci" name="ci">

                            <div class="alert alert-info" role="alert">
                                Seleccione los registros ficha accidente y haga click en <b>"Generar reporte"</b> para visualizar el resultado
                            </div>

                            <div class="col-md-4">
                                <label for="fechaInicio" class="form-label">Seleccione mes y año</label>
                                <div class="input-group">
                                    <input type="text" id="fechaInicio" name="fechaInicio" class="form-control required"
                                           placeholder="Mes-Año" value="{{ fechaInicio }}">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                                <input id="fra_ids" type="hidden" name="fra_ids" value="{{ fra_ids }}">
                            </div>

                            <div class="col-md-8 text-end">
                                <button id="btn_generate_report" type="submit" class="btn btn-primary">
                                    <i class="fas fa-play-circle"></i> Generar reporte
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Fin form de filtros -->

        <!-- Tabla de resultados -->
        {% if data_table is defined and data_table|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Incidente</th>
                            <th>Eje</th>
                            <th>PK</th>
                            <th>Fecha/Hora</th>
                            <th>A</th>
                            <th>B</th>
                            <th>C</th>
                            <th>S</th>
                            <th>Tipo Evento</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in data_table %}
                            <tr>
                                <td>{{ row.incidente_r|default('-') }}</td>
                                <td>{{ row.eje_r|default('-') }}</td>
                                <td>{{ row.pk_r|default('-') }}</td>
                                <td>{{ row.fechahora_r|default('-') }}</td>
                                <td>{{ row.a_r|default(0) }}</td>
                                <td>{{ row.b_r|default(0) }}</td>
                                <td>{{ row.c_r|default(0) }}</td>
                                <td>{{ row.s_r|default(0) }}</td>
                                <td>{{ row.tipo_evento_r|default('-') }}</td>
                                <td>{{ row.desc_tipo_evento_r|default('-') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-2x mb-3"></i>
                <h5>No se encontraron datos</h5>
                <p>Seleccione una fecha y genere el reporte</p>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var timer_toggle_task_bar;
        var stoped = false;

        function stopTimerToggleTaskBar() {
            if (!stoped) {
                clearTimeout(timer_toggle_task_bar);
                stoped = true;
            }
        }

        $(document).ready(function() {
            $('#fechaInicio').datepicker({
                format: 'mm-yyyy',
                viewMode: 'months',
                minViewMode: 'months',
                autoclose: true
            });

            timer_toggle_task_bar = setTimeout(function() {
                $("#toggle_task_bar").trigger("click");
            }, 600);
        });
    </script>
{% endblock %}