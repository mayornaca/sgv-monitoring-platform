{% extends '@EasyAdmin/page/content.html.twig' %}

{% set current_route = app.request.attributes.get('_route') %}
{% set is_vs = false %}
{% if 'vs' in current_route %}
    {% set is_vs = true %}
{% endif %}

{% block title %}Estados Diarios de Espiras - COT {% endblock %}

{% block content_top_header %}
    <div class="d-flex align-items-center gap-2">
        <h5 class="m-0">
            <i class="fas fa-chart-bar" style="color: var(--color-primary, #5368d5);"></i>
            Estado Diario de Espiras
        </h5>
    </div>

    {{ parent() }}
{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <!-- Tempus Dominus 6 CSS (Bootstrap 5 compatible) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@eonasdan/tempus-dominus@6/dist/css/tempus-dominus.min.css">
    <!-- Bootstrap Select CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
    <style>
        .highcharts-figure, .highcharts-data-table table {
            min-width: 310px;
            max-width: 1200px;
            margin: 1em auto;
        }

        #container {
            height: {{ arr_status_spires|length * 48 }}px;
            min-height: 320px;
        }

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #EBEBEB;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }
        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }
        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }
        .highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
            padding: 0.5em;
        }
        .highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }
        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }
    </style>
{% endblock %}

{% block head_javascript %}
    {{ parent() }}
{% endblock %}

{% block main %}
    <!-- Panel de Filtros -->
    <div class="card filter-card mb-3">
        <div class="card-header">
            <h5 class="card-title">
                <i class="fas fa-filter"></i> Filtros & Opciones
                <button type="button" class="btn btn-sm btn-secondary float-end" data-bs-toggle="collapse" data-bs-target="#filter-panel">
                    <i class="fas fa-chevron-down"></i> Mostrar/Ocultar
                </button>
            </h5>
        </div>
        <div id="filter-panel" class="collapse show">
            <div class="card-body">
                <form id="report_params" action="{% if is_vs %}{{ path('cot_spire_general_status_vs') }}{% else %}{{  path('cot_spire_general_status')  }}{% endif %}" method="get">
                    <input type="hidden" value="1" id="ci" name="ci">

                    <div class="row">
                        <!-- Fecha de Inicio -->
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="fechaInicio" class="form-label">Fecha</label>
                                <div class="input-group" id="dtpFechaInicio">
                                    <input type="text" id="fechaInicio" name="fechaInicio"
                                           class="form-control" placeholder="DD-MM-YYYY"
                                           value="{{ fechaInicio }}">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                                <small class="form-text text-muted">Seleccione un día para ver el estado general</small>
                            </div>
                        </div>

                        <!-- Selección de Espiras -->
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="spires" class="form-label">Espiras</label>
                                <select id="spires" name="spires[]"
                                        class="selectpicker form-control"
                                        multiple
                                        data-selected-text-format="count > 4"
                                        data-actions-box="true"
                                        data-live-search="true"
                                        data-select-all-text="Todas"
                                        data-deselect-all-text="Ninguna">
                                    {% for spire in all_spires %}
                                        <option value="{{ spire.id }}"
                                            {% if sel_spires is empty or (sel_spires and spire.id in sel_spires) %}selected{% endif %}>
                                            {{ spire.nombre }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <!-- Opciones -->
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label">Opciones de filtrado</label>
                                <div class="form-check d-none">
                                    <input class="form-check-input" type="checkbox" id="generatePdf" name="generatePdf">
                                    <label class="form-check-label" for="generatePdf">
                                        Generar PDF
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="firstErrors" name="firstErrors"
                                           {% if firstErrors %}checked{% endif %}>
                                    <label class="form-check-label" for="firstErrors">
                                        Errores primero
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="onlyErrors" name="onlyErrors"
                                           {% if onlyErrors %}checked{% endif %}>
                                    <label class="form-check-label" for="onlyErrors">
                                        Solo errores
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="col-md-3">
                            <label class="form-label d-block">&nbsp;</label>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-search"></i> Consultar
                            </button>


                            <a href="{% if is_vs %}{{ path('admin_spire_history_vs_min', {spires: sel_spires}) }}{% else %}{{ path('admin_spire_history', {spires: sel_spires}) }}{% endif %}" class="btn btn-primary">
                                <i class="fas fa-history"></i> Historial
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Área de visualización del Gráfico -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">
                <!-- Leyenda de colores -->
                <div class="float-end">
                    <span class="badge" style="background-color: #12cd00; color: white;">OK</span>
                    <span class="badge" style="background-color: #FFEB3B; color: black;">Datos en Cero</span>
                    <span class="badge" style="background-color: #F44336; color: white;">KO</span>
                </div>
            </h5>
            {% if return_file_name_pdf %}
                <div class="alert alert-success mt-2">
                    <i class="fas fa-file-pdf"></i> PDF generado: {{ return_file_name_pdf }}
                </div>
            {% endif %}
        </div>
        <div class="card-body">
            {% if arr_status_spires is empty %}
{#                <div class="alert alert-warning">#}
{#                    <i class="fas fa-info-circle"></i> No hay datos disponibles para la fecha seleccionada.#}
{#                    <details class="mt-2">#}
{#                        <summary>Ver SQL ejecutado</summary>#}
{#                        <pre class="bg-dark text-light p-2 mt-2" style="font-size: 11px;">Fecha procesada: {{ debug_fecha }}#}

{#{{ debug_sql }}</pre>#}
{#                    </details>#}
{#                </div>#}
            {% else %}
                <figure class="highcharts-figure">
                    <div id="container"></div>
                    <p class="highcharts-description"></p>
                </figure>
            {% endif %}
        </div>
    </div>

    <!-- Información adicional -->
    <div class="card mt-3 d-none">
        <div class="card-header">
            <h5 class="card-title">
                <i class="fas fa-info-circle"></i> Información
            </h5>
        </div>
        <div class="card-body">
            <ul>
                <li><strong>Gráfico:</strong> Muestra el porcentaje de tiempo que cada espira estuvo en cada estado durante el día seleccionado.</li>
                <li><strong>Estados:</strong> OK (verde), Datos en cero (amarillo), KO (rojo).</li>
                <li><strong>Cálculo:</strong> Basado en 1440 minutos por día (24 horas).</li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}

    <!-- Scripts adicionales necesarios -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <!-- Popper.js (requerido por Tempus Dominus) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <!-- Tempus Dominus 6 JS (Bootstrap 5 compatible) -->
    <script src="https://cdn.jsdelivr.net/npm/@eonasdan/tempus-dominus@6/dist/js/tempus-dominus.min.js"></script>
    <!-- Bootstrap Select JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/i18n/defaults-es_ES.min.js"></script>
    <!-- Highcharts -->
    <script src="{{ asset('js/highcharts/highcharts.js') }}"></script>
    <script src="{{ asset('js/highcharts/highcharts-more.js') }}"></script>

    <script>
        jQuery(document).ready(function() {
            // Inicializar Bootstrap Select
            $('.selectpicker').selectpicker();

            {% if fechaInicio %}
            var fechaInicio = '{{ fechaInicio }}';
            $('#fechaInicio').val(fechaInicio);
            {% endif %}

            {% if firstErrors %}
            $('#firstErrors').prop('checked', true);
            {% else %}
            $('#firstErrors').prop('checked', false);
            {% endif %}

            {% if onlyErrors %}
            $('#onlyErrors').prop('checked', true);
            {% else %}
            $('#onlyErrors').prop('checked', false);
            {% endif %}

            {% if showEmpty %}
            $('#showEmpty').prop('checked', true);
            {% else %}
            $('#showEmpty').prop('checked', false);
            {% endif %}
        });

        // Inicializar Tempus Dominus 6 (Bootstrap 5 compatible)
        $(function () {
            console.log('Inicializando Tempus Dominus 6');

            const tempusDominus = window.tempusDominus;
            if (tempusDominus) {
                const options = {
                    display: {
                        components: {
                            calendar: true,
                            date: true,
                            month: true,
                            year: true,
                            decades: true,
                            clock: false,
                            hours: false,
                            minutes: false,
                            seconds: false
                        }
                    },
                    localization: {
                        locale: 'es',
                        format: 'dd-MM-yyyy'
                    },
                    useCurrent: false
                };

                // Initialize fecha inicio
                if (document.getElementById('dtpFechaInicio')) {
                    const pickerInicio = new tempusDominus.TempusDominus(document.getElementById('dtpFechaInicio'), options);
                }

                console.log('Tempus Dominus 6 inicializado correctamente');
            } else {
                console.error('Tempus Dominus no está disponible');
            }
        });

        // Renderizar gráfico Highcharts
        {% if arr_status_spires is not empty %}
        Highcharts.chart('container', {
            chart: {
                type: 'bar',
                marginTop: 36,
            },
            title: {
                text: ''
            },
            xAxis: {
                categories: [{% for graphic in arr_status_spires %}'{{ graphic.id_dispositivo }}',{% endfor %}],
            },
            yAxis: {
                min: 0,
                max: 100,
                title: {
                    text: '%'
                }
            },
            legend: {
                reversed: true,
                layout: 'horizontal',
                align: 'right',
                verticalAlign: 'top',
                borderWidth: 0,
            },
            plotOptions: {
                series: {
                    stacking: 'normal',
                    dataLabels: {
                        shape:'square',
                        enabled: true,
                        shadow:false,
                        style: {
                            color:'contrast',
                            fontSize:'13px',
                            fontWeight:'bold',
                            textOutline:'1px contrast'
                        },
                        formatter: function () {
                            return this.y > 0 ? '' + this.y + '%' : null;
                        }
                    }
                }
            },
            series: [{
                name: 'OK',
                color: '#12cd00',
                data: [{% for graphic in arr_status_spires %}{{ graphic.ver }},{% endfor %}]
            }, {
                name: 'Datos en cero',
                color: '#FFEB3B',
                data: [{% for graphic in arr_status_spires %}{{ graphic.ama }},{% endfor %}]
            }, {
                name: 'KO',
                color: '#F44336',
                data: [{% for graphic in arr_status_spires %}{{ graphic.roj }},{% endfor %}]
            }]
        });
        {% endif %}
    </script>
{% endblock %}
