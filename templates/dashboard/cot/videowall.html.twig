            {% else %}
            var path_url = "/admin/monitor/" + id;
            {% endif %}

            // Agregar par√°metros de b√∫squeda de la URL
            var urlParams = new URLSearchParams(current_url.search);
            var input_device_finder = urlParams.get('input_device_finder') || '';

            if (!isGettingDevicesStatus) {
                isGettingDevicesStatus = true;

                // Construir par√°metros seg√∫n el tipo de monitor
                var ajaxData = {
                    ajax: true,
                    input_device_finder: input_device_finder
                };

                {% if is_vs_monitor %}
                // Para VS, agregar el par√°metro id en query string
                ajaxData.id = id;
                {% endif %}

                $.ajax({
                    url: path_url,
                    type: "GET",
                    data: ajaxData,
                    async: true,
                    cache: false,
                    dataType: 'json',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function (response) {
                        console.log('‚úÖ SOS Status received:', response);

                        if (response.success && response.dispositivos) {
