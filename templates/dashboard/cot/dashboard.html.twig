{% block body_javascript %}
    {{ parent() }}
    <!-- Chart.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <script>
        // Initialize full-width dashboard layout and timer
        document.addEventListener('DOMContentLoaded', function() {
            // DISABLED 2025-10-16: Auto-collapse removed to respect user's localStorage preference
            // The sidebar will now follow the user's manual toggle state
            // TODO: Evaluate if full-screen mode should be optional or use a different approach
            // const sidebarResizerHandler = document.getElementById('sidebar-resizer-handler');
            // if (sidebarResizerHandler) {
            //     sidebarResizerHandler.click();
            // }

            // Hide top navbar for full-screen experience
            const headerNavbar = document.querySelector('.header-navbar');
            if (headerNavbar) {
                headerNavbar.style.display = 'none';
            }

            // Hide content-top header
            const contentTop = document.querySelector('.content-top');
            if (contentTop) {
                contentTop.style.display = 'none';
            }

            // Ensure content wrapper takes full width
            const contentWrapper = document.querySelector('.content-wrapper');
            if (contentWrapper) {
                contentWrapper.style.marginLeft = '0';
                contentWrapper.style.width = '100%';
                contentWrapper.style.maxWidth = '100%';
            }

            // Start auto-update timer
            startDashboardTimer();
        });

        // Chart.js configuration for device status
        const chartColors = {
            active: 'rgba(40, 167, 69, 0.8)',     // Green
            inactive: 'rgba(220, 53, 69, 0.8)',   // Red
            borderActive: 'rgba(40, 167, 69, 1)',
            borderInactive: 'rgba(220, 53, 69, 1)'
        };

        // Initialize all charts
        {% for item in data_table %}
        (function() {
            const ctx = document.getElementById('chart_{{ item.id }}');
            if (ctx) {
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Activos', 'Inactivos'],
                        datasets: [{
                            data: [{{ item.activos }}, {{ item.inactivos }}],
                            backgroundColor: [
                                chartColors.active,
                                chartColors.inactive
                            ],
                            borderColor: [
                                chartColors.borderActive,
                                chartColors.borderInactive
                            ],
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        const total = {{ item.total }};
                                        const value = context.parsed;
                                        const percentage = ((value / total) * 100).toFixed(1);
                                        return context.label + ': ' + value + ' (' + percentage + '%)';
                                    }
                                }
                            }
                        },
                        cutout: '70%'
                    }
                });
            }
        })();
        {% endfor %}

        // Auto-update timer
        let updateInterval = 60; // seconds
        let countdown = updateInterval;
        let dashboardTimer;

        function updateTimerDisplay() {
            const display = document.getElementById('timer-display');
            const nextUpdate = document.getElementById('next-update');

            if (display) {
                display.textContent = updateInterval + 's';
            }

            if (nextUpdate) {
                nextUpdate.textContent = countdown + 's';
            }
        }

        function startDashboardTimer() {
            clearInterval(dashboardTimer);
            countdown = updateInterval;

            dashboardTimer = setInterval(function() {
                countdown--;
                updateTimerDisplay();

                if (countdown <= 0) {
                    getDashboardData();
                    countdown = updateInterval;
                }
            }, 1000);
        }

        function getDashboardData() {
            fetch('{{ path('cot_dashboard') }}', {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data && data.data_table) {
                    console.log('Dashboard data updated:', data.data_table.length + ' devices');

                    // Update each card with new data
                    data.data_table.forEach((item, index) => {
                        // Update numeric values
                        const activosEl = document.querySelector(`#resumen .stat-card:nth-child(${index + 1}) .stat-value.text-success`);
                        const inactivosEl = document.querySelector(`#resumen .stat-card:nth-child(${index + 1}) .stat-value.text-danger`);
                        const totalEl = document.querySelector(`#resumen .stat-card:nth-child(${index + 1}) .stat-value.text-primary`);
                        const activosBadge = document.querySelector(`#resumen .stat-card:nth-child(${index + 1}) .badge.bg-success`);
                        const inactivosBadge = document.querySelector(`#resumen .stat-card:nth-child(${index + 1}) .badge.bg-danger`);

                        if (activosEl) activosEl.textContent = item.activos;
                        if (inactivosEl) inactivosEl.textContent = item.inactivos;
                        if (totalEl) totalEl.textContent = item.total;
                        if (activosBadge) activosBadge.textContent = parseFloat(item.por_Activos).toFixed(1) + '%';
                        if (inactivosBadge) inactivosBadge.textContent = parseFloat(item.por_inactivos).toFixed(1) + '%';

                        // Update chart if exists
                        const chartCanvas = document.getElementById('chart_' + item.id);
                        if (chartCanvas && window.Chart) {
                            const chart = Chart.getChart(chartCanvas);
                            if (chart) {
                                chart.data.datasets[0].data = [item.activos, item.inactivos];
                                chart.update('none'); // Update without animation for performance
                            }
                        }
                    });
                }
            })
            .catch(error => {
                console.error('Error updating dashboard:', error);
            });
        }

        // Timer range control
        const timerRange = document.getElementById('timer-range-ajax-update');
        if (timerRange) {
            timerRange.addEventListener('input', function() {
                updateInterval = parseInt(this.value);
                updateTimerDisplay();
                startDashboardTimer();
            });
        }

        // View alarm detail function
        function viewAlarmDetail(alarmId) {
            // Implementation for viewing alarm details
            console.log('View alarm:', alarmId);
        }

        // Visibility API to pause updates when tab is not visible
        document.addEventListener('visibilitychange', function() {
            if (document.hidden) {
                clearInterval(dashboardTimer);
            } else {
                startDashboardTimer();
            }
        });
    </script>
{% endblock %}