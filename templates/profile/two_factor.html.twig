{% extends 'base_dashboard.html.twig' %}

{% block title %}Autenticación de Dos Factores - SGV{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block body %}
<!-- Navbar similar a EasyAdmin -->
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="/admin">
            <img src="/assets/images/logo.png" alt="Logo" style="height: 35px;">
        </a>
        <div class="ms-auto d-flex align-items-center">
            <div class="dropdown">
                <button class="btn btn-link text-decoration-none dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle fa-lg"></i>
                    <span class="ms-2">{{ app.user.userIdentifier }}</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i> Mi Perfil</a></li>
                    <li><a class="dropdown-item" href="/admin"><i class="fas fa-tachometer-alt me-2"></i> Panel Admin</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i> Cerrar sesión</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<!-- Contenido -->
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
        <nav class="flex mb-4">
            <a href="{{ path('app_user_profile') }}" class="text-blue-600 hover:text-blue-800">Mi Perfil</a>
            <span class="mx-2 text-gray-500">/</span>
            <span class="text-gray-600">Autenticación de Dos Factores</span>
        </nav>
        <h1 class="text-3xl font-bold text-gray-900">Autenticación de Dos Factores</h1>
        <p class="text-gray-600 mt-2">Aumenta la seguridad de tu cuenta con verificación adicional</p>
    </div>

    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'error' : (label == 'warning' ? 'warning' : 'success') }} mb-6">
                <svg class="w-6 h-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
                    {% if label == 'success' %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    {% elseif label == 'warning' %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                    {% else %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    {% endif %}
                </svg>
                <span>{{ message }}</span>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
        <!-- Estado general -->
        <div class="xl:col-span-3">
            <div class="bg-white rounded-lg shadow p-6 mb-8">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            {% if user.twoFactorEnabled %}
                                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                                    <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.018-4.674a5.25 5.25 0 10-7.536 7.536" />
                                    </svg>
                                </div>
                            {% else %}
                                <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                                    <svg class="w-6 h-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                                    </svg>
                                </div>
                            {% endif %}
                        </div>
                        <div class="ml-4">
                            <h2 class="text-xl font-semibold text-gray-900">
                                {% if user.twoFactorEnabled %}
                                    2FA Habilitado
                                {% else %}
                                    2FA Deshabilitado
                                {% endif %}
                            </h2>
                            <p class="text-sm text-gray-600">
                                {% if user.twoFactorEnabled %}
                                    Tu cuenta está protegida con {{ user.preferred2faMethod|upper }}
                                {% else %}
                                    Tu cuenta no tiene protección adicional habilitada
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="text-right">
                        {% if user.twoFactorEnabled %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                </svg>
                                Activo
                            </span>
                        {% else %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                </svg>
                                Inactivo
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Métodos de 2FA -->
        <div class="xl:col-span-2 space-y-6">
            <!-- TOTP (Aplicación Autenticadora) -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center">
                        <svg class="w-8 h-8 text-green-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                        </svg>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">Aplicación Autenticadora</h3>
                            <p class="text-sm text-gray-600">Google Authenticator, Authy, etc.</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-3">
                        {% if user.totpSecret %}
                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded">Configurado</span>
                            <form method="post" class="inline">
                                <input type="hidden" name="action" value="disable_totp">
                                <button type="submit" class="btn btn-outline btn-sm text-red-600 hover:bg-red-50">
                                    Deshabilitar
                                </button>
                            </form>
                        {% else %}
                            <form method="post" class="inline">
                                <input type="hidden" name="action" value="enable_totp">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    Habilitar
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>

                {% if user.totpSecret and qr_code %}
                    <div class="border-t pt-4">
                        <h4 class="font-medium text-gray-900 mb-3">Configuración</h4>
                        <div class="bg-gray-50 rounded-lg p-4">
                            <div class="text-center">
                                <div class="inline-block p-4 bg-white rounded-lg">
                                    <div id="qr-code" class="mx-auto"></div>
                                </div>
                                <p class="text-sm text-gray-600 mt-3">
                                    Escanea este código QR con tu aplicación autenticadora
                                </p>
                                <details class="mt-3">
                                    <summary class="text-sm text-blue-600 cursor-pointer">¿No puedes escanear? Ingresa manualmente</summary>
                                    <div class="mt-2 p-3 bg-white rounded border">
                                        <p class="text-xs text-gray-500 mb-2">Clave secreta:</p>
                                        <code class="text-sm font-mono bg-gray-100 px-2 py-1 rounded">{{ user.totpSecret }}</code>
                                    </div>
                                </details>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- Email 2FA -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center">
                        <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.25a1 1 0 001.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">Autenticación por Email</h3>
                            <p class="text-sm text-gray-600">{{ user.email }}</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-3">
                        {% if user.twoFactorEnabled and user.preferred2faMethod == 'email' %}
                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded">Activo</span>
                            <form method="post" class="inline">
                                <input type="hidden" name="action" value="disable_email">
                                <button type="submit" class="btn btn-outline btn-sm text-red-600 hover:bg-red-50">
                                    Deshabilitar
                                </button>
                            </form>
                        {% else %}
                            <form method="post" class="inline">
                                <input type="hidden" name="action" value="enable_email">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    Habilitar
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
                <div class="text-sm text-gray-600">
                    Se enviará un código de 6 dígitos a tu email cada vez que inicies sesión.
                </div>
            </div>

            <!-- Códigos de respaldo -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center">
                        <svg class="w-8 h-8 text-orange-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">Códigos de Respaldo</h3>
                            <p class="text-sm text-gray-600">Para acceso de emergencia</p>
                        </div>
                    </div>
                    {% if user.twoFactorEnabled %}
                        <form method="post" class="inline">
                            <input type="hidden" name="action" value="regenerate_backup_codes">
                            <button type="submit" class="btn btn-outline btn-sm">
                                Regenerar
                            </button>
                        </form>
                    {% endif %}
                </div>
                <div class="text-sm text-gray-600">
                    {% if user.twoFactorEnabled %}
                        Los códigos de respaldo te permiten acceder si pierdes tu dispositivo 2FA.
                        <strong>Guárdalos en un lugar seguro.</strong>
                    {% else %}
                        Disponibles cuando habilites 2FA.
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Panel lateral de ayuda -->
        <div class="xl:col-span-1">
            <div class="bg-blue-50 rounded-lg p-6 sticky top-8">
                <h3 class="font-semibold text-blue-900 mb-4">¿Necesitas ayuda?</h3>
                <div class="space-y-4 text-sm text-blue-800">
                    <div>
                        <h4 class="font-medium">Aplicaciones recomendadas:</h4>
                        <ul class="mt-2 space-y-1 text-blue-700">
                            <li>• Google Authenticator</li>
                            <li>• Microsoft Authenticator</li>
                            <li>• Authy</li>
                            <li>• 1Password</li>
                        </ul>
                    </div>
                    <div>
                        <h4 class="font-medium">Consejos de seguridad:</h4>
                        <ul class="mt-2 space-y-1 text-blue-700">
                            <li>• Guarda los códigos de respaldo</li>
                            <li>• No compartas tu código secreto</li>
                            <li>• Configura múltiples métodos</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% if user.totpSecret and qr_code %}
    {# QRCode is now loaded via Webpack Encore #}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            QRCode.toCanvas(document.getElementById('qr-code'), '{{ qr_code }}', {
                width: 200,
                margin: 2,
                color: {
                    dark: '#1f2937',
                    light: '#ffffff'
                }
            });
        });
    </script>
{% endif %}
{% endblock %}