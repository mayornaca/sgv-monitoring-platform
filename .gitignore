# =============================================================================
# SGV - Sistema de Gestión Vial
# .gitignore - Archivos excluidos del control de versiones
# =============================================================================

# === ARCHIVOS SENSIBLES (CRÍTICO - NUNCA VERSIONAR) ===
# Configuración de entorno con credenciales
.env
.env.*
!.env.example

# Claves JWT y certificados
/config/jwt/*.pem
/config/jwt/*.key
/config/secrets/prod/prod.decrypt.private.php

# === SYMFONY FRAMEWORK ===
/var/
/vendor/
/public/bundles/

# === ARCHIVOS TEMPORALES Y GENERADOS ===
# Reportes generados por usuarios
/public/downloads/
/public/uploads/

# Cache de alertas Spire
/hash/

# Archivos comprimidos en raíz
/*.tar.gz
/*.zip
/*.rar

# Screenshots y archivos temporales
/public/screenshots/
*.tmp
*.log
*.back
*.backup
*.bak

# === PROYECTO LEGACY ===
/old-project/
/old_project/

# === NODE.JS / WEBPACK ===
node_modules/
/public/build/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# === IDEs Y EDITORES ===
/.idea/
/.vscode/
*.swp
*.swo
*~

# === SISTEMA OPERATIVO ===
.DS_Store
Thumbs.db

# === COMPOSER ===
composer.phar

# === TESTING ===
/phpunit.xml
/.phpunit.result.cache

# === BASE DE DATOS LOCAL ===
*.sqlite
*.db

# === DOCKER LOCAL ===
docker-compose.override.yml

# === CONFIGURACIÓN DE AGENTES IA (solo local) ===
.claude/settings.local.json
.claude/plans/

# === DOCUMENTACIÓN TEMPORAL ===
/docs/history/
/docs/*.zip
/EXTRACTED_PATTERNS/

# === SCRIPTS DE TEST (mantener test-page.js) ===
test-*.js
!test-page.js
